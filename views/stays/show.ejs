<%- include('../partials/header') %>

<h1 class="title"><%= stay.name %></h1>
<h2 class="title">Region: <%= stay.region %></h2>
<br><br>
<h4>Reviews</h4>
<p>Stayed here before? Share your experience with fellow travelers!</p>

<form method="POST"
action="/stays/<%= stay._id %>/reviews" <% if (!user) { %> hidden <% } %>>
  <label class="form-label">Review: <br>
  <textarea name="content" id="textbox"></textarea>
  </label> <br>
  <label class="form-label">Rating: <br>
  <select name="rating" value="5">
    <option value="5">5</option>
    <option value="4">4</option>
    <option value="3">3</option>
    <option value="2">2</option>
    <option value="1">1</option>
  </select> 
  </label>
  <br> <br>
  <input type="submit" value="Add Review">
</form>

<% if (stay.reviews.length) { %>
    <table>
      <thead>
        <tr>
            <th>Date</th>
            <th>Username</th>
            <th>Review</th>
            <th>Rating</th>
        </tr>
      </thead>
      <tbody>
        <% total = 0 %>
        <% stay.reviews.reverse().forEach(function(r, idx) { %>
          <tr>
            <td><%= r.createdAt.toLocaleDateString() %></td>
            <td><%= r.userName %> </td>
            <td><%= r.content %></td>
            <td><%= r.rating %></td>
            <td><form action="/reviews/<%= r._id %>?_method=DELETE" method="POST">
                    <button type="submit" id="deletebtn" <% if (!user) { %> hidden <% } else if (user._id.equals(r.userId) == false ) { %> hidden <% } %>>Delete this review</button>
                    <input name="stay_id" value= "<%=stay._id%>" hidden>
                </form>
            </td>
            <% total += r.rating; %>
          </tr>
          <% }); %>
          <tr>
            <td colspan="3"></td>
            <td><strong><%= (total / stay.reviews.length).toFixed(1) %></strong></td>
          </tr>
      </tbody>
    </table>
  <% } else { %>
    <h5>No Reviews Yet</h5>
  <% } %>


<%- include('../partials/footer') %>