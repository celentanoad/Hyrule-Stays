<%- include('../partials/header') %>

<h3>Add a place you've stayed!</h3>

<form action="/stays" method="POST">
    <label class="form-label">Name: 
        <input type="text" name="name" id="input-line">
    </label><br>
    <div class="rating">
    <label class="form-label">Region: 
        <select name="region" class="browser-default">
            <option value="Akkala">Akkala</option>
            <option value="Central Hyrule">Central Hyrule</option>
            <option value="Dueling Peaks">Dueling Peaks</option>
            <option value="Eldin">Eldin</option>
            <option value="Faron">Faron</option>
            <option value="Gerudo Highlands">Gerudo Highlands</option>
            <option value="Great Plateau">Great Plateau</option>
            <option value="Hateno">Hateno</option>
            <option value="Hebra">Hebra</option>
            <option value="Lake Hylia">Lake Hylia</option>
            <option value="Lanayru">Lanayru</option>
            <option value="Ridgeland">Ridgeland</option>
            <option value="Tabantha">Tabantha</option>
            <option value="Great Hyrule Forest">Great Hyrule Forest</option>
            <option value="Gerudo Wasteland">Gerudo Wasteland</option>
        </select>
    </label>
    </div><br><br>
    <input type="submit" value="Add">

</form>


<%- include('../partials/footer') %>